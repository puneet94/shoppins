			div(class="activityContent")
				div(md-whiteframe="3" class="activityContentText")
					div
						div(class="activityReviewStoreImageContainer")
							div(class="reviewStoreImage" afkl-lazy-image="#{i.store.bannerImage}")

		else if i.statement == "purchased product"
			div(class="activityHeading")
				- var userLink = "#/user/"+i.creator._id
				div(class="creatorImageContainer")
					a(ng-href='#{userLink}')
