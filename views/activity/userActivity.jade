					a(ng-href='#{userLink}')
						div(class="creatorImage" afkl-lazy-image='#{i.creator.picture}')
				div(class="activityHeadingTextContainer")
					h5(class="activityHeadingText")
						span(class="activityHeadingTextInfo")
							a(ng-href='#{userLink}').
								#{i.creator.displayName}
						span(class="activityHeadingTextInfo").
							#{i.statement}
						span(class="activityHeadingTextInfo")
							- var followedLink = "#/user/"+i.followed._id
							a(ng-href='#{followedLink}').
								#{i.followed.displayName}
				
					h6(class="activityTime")
						span.
							#{i.time}
				div(class="clearBoth")
			div(class="activityContent")
				div(md-whiteframe="3" class="activityContentText")
					div
						div(class="activityFollowCreatorImageContainer")
							div(class="followCreatorImage" afkl-lazy-image="#{i.creator.picture}")
						div(class="activityFollowFollowedImageContainer")
							div(class="followFollowedImage" afkl-lazy-image="#{i.followed.picture}")
						div(class="clearBoth")
							
		else if i.statement == "visited store"
